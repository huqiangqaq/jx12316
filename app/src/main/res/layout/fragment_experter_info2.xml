<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/btn_white_normal"
    tools:context="com.nxt.ott.fragment.ExperterInfoFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_bg"
        android:orientation="horizontal"
        android:padding="8dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_experter_tel"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableLeft="@mipmap/button_bdrx02"
                android:layout_centerInParent="true"
                android:text="12316热线"/>
        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/line"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_experter_picture"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableLeft="@mipmap/button_zjzx02"
                android:text="向他提问"/>
        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/line"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_experter_video"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableLeft="@mipmap/videocall"
                android:text="视频通话"/>
        </RelativeLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="钟志华"/>
                <TextView
                    android:id="@+id/type"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="畜牧业"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_zixunfuwu"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:padding="5dp"
        android:id="@+id/tv_remarks"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/commo_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="详细资料详细资详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料。"/>

</LinearLayout>
