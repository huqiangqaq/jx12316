<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.nxt.ott.fragment.ExperterInfoFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">
        <ImageButton
            android:background="@null"
            android:scaleType="fitXY"
            android:id="@+id/tv_submit_all"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_wendajia"/>
        <ImageButton
            android:background="@null"
            android:scaleType="fitXY"
            android:id="@+id/tv_submit"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_xuanta"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="钟志华"/>
                <TextView
                    android:id="@+id/type"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="畜牧业"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_zixunfuwu"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长擅长"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:padding="5dp"
        android:id="@+id/tv_remarks"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/commo_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="详细资料详细资详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料详细资料。"/>

</LinearLayout>
