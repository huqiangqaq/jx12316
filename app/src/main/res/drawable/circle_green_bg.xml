<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape
            android:shape="oval"
            android:useLevel="false">

            <solid android:color="@color/agricultural_capital_green"/>
            <stroke
                android:width="2dp"
                android:color="@color/agricultural_capital_slide_gray"/>
        </shape>

    </item>
    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">

            <solid android:color="@color/white"/>
            <stroke
                android:width="2dp"
                android:color="@color/agricultural_capital_slide_gray"/>
        </shape>

    </item>
</selector>